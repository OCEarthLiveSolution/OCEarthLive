class MyListener(StreamListener):
    
    consumer = None
     
#    def on_data(self, data):
##        tweet = json.loads(data)
#        status = Status(data)
#        tweets = SearchResults([status])
##        if isgeo_enabled(tweet):
#        print tweets
#        
##        self.consumer(tweet)
#        return True
    def on_status(self, status):
        tweets = SearchResults()
        tweets.append(status)
        self.consumer.process(tweets)
    
    def on_error(self, status_code):
        print status_code

def monitor_tweets(eonet):

    #This handles Twitter authentication and the connection to Twitter Streaming API
#    l = StdOutListener()
    l = MyListener()
    auth = OAuthHandler(CONSUMER_KEY, CONSUMER_SECRET)
    auth.set_access_token(ACCESS_TOKEN, ACCESS_TOKEN_SECRET)
    stream = Stream(auth, l)
    
    consumer = PrettyDump()
    l.consumer = consumer

    # The event dictionary contains all the hash tags to monitor and geometries
    # to filter on.
    hashtags = eonet.event_dictionary.keys()
    geoms = eonet.event_dictionary.values()
    l.consumer.set_polygon(geoms)
    stream.filter(track=hashtags)