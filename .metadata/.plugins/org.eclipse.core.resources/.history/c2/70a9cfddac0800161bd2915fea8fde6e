import sqlite3

con = sqlite3.connect('/tmp/tweets.db')

with con:
    cursor = con.cursor()
    cursor.execute('''
        CREATE TABLE Tweet(
            id INTEGER PRIMARY KEY,
            name TEXT,
            createDate TEXT,
            place TEXT,
            msg, TEXT,
            longitude REAL,
            latitutde REAL
        )''')
    con.commit()
            